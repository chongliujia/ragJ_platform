# Backend environment example

# Application
PROJECT_NAME=RAG Platform
API_V1_STR=/api/v1
DEBUG=true

# Security
SECRET_KEY=please_change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (SQLite by default)
DATABASE_URL=sqlite:///./ragj_platform.db

# Redis (optional for queues/state)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
USE_CELERY=false

# Milvus (vector DB)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_DATABASE=ragj_platform

# Elasticsearch (hybrid search)
# For list type values, keep JSON-like string
ELASTICSEARCH_HOSTS=["http://localhost:9200"]
ENABLE_ELASTICSEARCH=false

# Object storage (optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ragj-documents
MINIO_SECURE=false

# Uploads
UPLOAD_DIR=/tmp/uploads

# LLM Providers (fill needed keys)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=

DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_CHAT_MODEL=deepseek-chat

DASHSCOPE_API_KEY=
QWEN_EMBEDDING_MODEL=text-embedding-v2
QWEN_RERANK_MODEL=gte-rerank
QWEN_CHAT_MODEL=qwen-turbo

SILICONFLOW_API_KEY=
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# Defaults for model roles
CHAT_MODEL_PROVIDER=deepseek
CHAT_MODEL_NAME=deepseek-chat
EMBEDDING_MODEL_PROVIDER=siliconflow
EMBEDDING_MODEL_NAME=BAAI/bge-m3
RERANK_MODEL_PROVIDER=qwen
RERANK_MODEL_NAME=gte-rerank

# Rust microservices (optional)
RUST_DOCUMENT_PROCESSOR_URL=http://localhost:8001
RUST_VECTOR_STORE_URL=http://localhost:8002

# LangGraph
LANGGRAPH_STATE_BACKEND=redis
LANGGRAPH_CHECKPOINT_NAMESPACE=ragj_platform

# Model config persistence (optional path outside repo to avoid committing secrets)
# MODEL_CONFIG_FILE=/data/model_configs.json
